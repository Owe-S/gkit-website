rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admin user profiles
    match /admins/{document=**} {
      allow read, write: if isAdmin();
      allow create: if isAuthenticated() && request.resource.data.email == request.auth.token.email;
    }
    
    // Public content collections (read by everyone, write by admins only)
    match /home/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /solutions/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /apps/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /blog/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Invitation tokens (created by admins, read/used by unauthenticated users)
    match /invitations/{document=**} {
      allow read, write: if isAdmin();
      allow read: if request.query.limit <= 1 && document == null;
    }
    
    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
